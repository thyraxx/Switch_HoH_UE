								<scalebutton canfocus="false" spriteset="scalebutton" width="125" font="gui/fonts/arial11.fnt" value="beastiary" func="set-tab beastiary" text=".guildhall.tab.beastiary" />
								<scalebutton canfocus="false" spriteset="scalebutton" width="125" font="gui/fonts/arial11.fnt" value="itemiary" func="set-tab itemiary" text=".guildhall.tab.itemiary" />
								<!-- <scalebutton spriteset="scalebutton" width="125" font="gui/fonts/arial11.fnt" text="bar" /> -->
							</clip>
						</checkboxgroup>
					</rect>

					<rect width="3" height="18" spriteset="gui/variable/3pxbar_vert.sval" />

					<rect width="32" height="18" spriteset="gui/variable/slider/inside_disabled_borders.sval">
						<sprite src="R" offset="4 -3"/>
					</rect>
				</rect>

				<!--
				<rect offset="2 23" width="380" height="18">
					<checkboxgroup id="tabs-container" width="380" height="18">
						<clip id="tabs-clip" width="380" height="18" flow="hbox">
							<scalebutton canfocus="false" spriteset="scalebutton" width="125" font="gui/fonts/arial11.fnt" value="stats" func="set-tab stats" text=".guildhall.tab.stats" />
							<scalebutton canfocus="false" spriteset="scalebutton" width="130" font="gui/fonts/arial11.fnt" value="accomplishments" func="set-tab accomplishments" text=".guildhall.tab.accomplishments" />
							<scalebutton canfocus="false" spriteset="scalebutton" width="125" font="gui/fonts/arial11.fnt" value="beastiary" func="set-tab beastiary" text=".guildhall.tab.beastiary" />
							<scalebutton canfocus="false" spriteset="scalebutton" width="125" font="gui/fonts/arial11.fnt" value="itemiary" func="set-tab itemiary" text=".guildhall.tab.itemiary" />
						</clip>
					</checkboxgroup>
				</rect>
				-->

				<!-- Separator -->
				<rect offset="2 41" width="380" height="3" spriteset="gui/variable/3pxbar_hor.sval" />

				<!-- Content -->
				<rect id="tab-stats" width="380" height="194" offset="2 44" />
				<rect id="tab-accomplishments" width="380" height="194" offset="2 44" />
				<rect id="tab-beastiary" width="380" height="194" offset="2 44" />
				<rect id="tab-itemiary" width="380" height="194" offset="2 44" />

				<!--sprite src="L" offset="3 5"/-->
				<!--sprite src="R" offset="357 5"/-->

				<rect anchor="1 1" offset="-8 20" flow="hbox" spacing="6" width="145" height="20">
					<rect width="90" height="20">
						<sprite src="Y"/>
						<text font="gui/fonts/arial11.fnt" text="Toggle Tooltip" offset="24 4"/>
					</rect>
					<rect width="47" height="20">
						<sprite src="B"/>
						<text font="gui/fonts/arial11.fnt" text="Back" offset="24 4"/>
